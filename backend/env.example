# 环境变量配置示例
# 复制此文件为 .env 并修改相应配置

# 应用配置
APP_NAME=Universal Security Intercom System
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# 服务器配置
HOST=0.0.0.0
PORT=8000
RELOAD=true

# 数据库配置
DATABASE_URL=sqlite:///./security_intercom.db
DATABASE_ECHO=false

# 安全配置
SECRET_KEY=your-secret-key-here-must-be-at-least-32-characters-long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS配置
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_CREDENTIALS=true
CORS_METHODS=*
CORS_HEADERS=*

# Redis配置（可选）
# REDIS_URL=redis://localhost:6379/0
# REDIS_PASSWORD=

# 文件上传配置
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.gif,.pdf,.doc,.docx

# WebSocket配置
WEBSOCKET_HEARTBEAT_INTERVAL=30
WEBSOCKET_TIMEOUT=60

# 日志配置
LOG_LEVEL=INFO
# LOG_FILE=./logs/app.log
LOG_ROTATION=1 day
LOG_RETENTION=30 days

# 邮件配置（用于通知）
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_USE_TLS=true

# 多租户配置
DEFAULT_TENANT_ID=default
TENANT_ISOLATION=true
MAX_TENANTS=100

# 功能模块配置
ENABLE_USER_REGISTRATION=true
ENABLE_DEVICE_AUTO_DISCOVERY=false
ENABLE_REAL_TIME_MONITORING=true
ENABLE_ALARM_NOTIFICATIONS=true
ENABLE_AUDIT_LOGGING=true

# API配置
API_V1_PREFIX=/api/v1
DOCS_URL=/docs
REDOC_URL=/redoc
OPENAPI_URL=/openapi.json
